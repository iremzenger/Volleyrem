<div class="row">
    <div class="bg-white p-4">
        <h1 class="h4 mb-4">Popüler Oyuncular</h1>
        @foreach (var oyuncu in Model.Players)
        {
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4 d-flex align-items-center justify-content-center">
                        <div class="image-wrapper" style="height: 150px; overflow: hidden; border-radius: 10px;">
                            <img src="@Url.Content(oyuncu.FotoUrl)" class="img-fluid" style="object-fit: cover; width: 100%; height: 100%;" alt="@oyuncu.PlayerName" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-action="Details" asp-route-id="@oyuncu.PlayerId" class="btn-link fw-bold">@oyuncu.PlayerName</a>
                            </h5>
                            <p class="card-text">Ülke: @oyuncu.Country?.CountryName</p>
                            <p class="card-text">Pozisyon: @oyuncu.Position?.PositionName</p>

                            <!-- Edit ve Sil Butonları -->
                            <a asp-action="Edit" asp-route-id="@oyuncu.PlayerId" class="btn btn-success btn-sm me-2">Edit</a>
                            <a asp-action="Delete" asp-route-id="@oyuncu.PlayerId" class="btn btn-danger btn-sm">Sil</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>